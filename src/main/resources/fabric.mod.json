{
  "schemaVersion": 1,
  "id": "ducky-periphs",
  "version": "${version}",

  "name": "Ducky Peripherals",
  "description": "Adds a variety of peripheral addons for ComputerCraft Restitched",
  "authors": [
    "samsthenerd"
  ],
  "contact": {
    "homepage": "https://github.com/SamsTheNerd/ducky-periphs",
    "sources": "https://github.com/SamsTheNerd/ducky-periphs",
    "issues": "https://github.com/SamsTheNerd/ducky-periphs/issues"
  },

  "license": "lgpl-3",
  "icon": "assets/ducky-periphs/DuckyPeriphsIconLarge.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.fabricmc.duckyperiphs.DuckyPeriph"
    ],
    "client": [
      "net.fabricmc.duckyperiphs.DuckyPeriphClientInit"
    ],
    "cardinal-components": [
      "net.fabricmc.duckyperiphs.hexcasting.DuckyCastingCC"
    ],
    "rei_client": [
      "net.fabricmc.duckyperiphs.compat.REI.REIPlugin"
    ]
  },
  "mixins": [
    "duckyperiphs.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.3",
    "fabric-api": "*",
    "minecraft": "~1.19.2",
    "computercraft": ">=1.101.2",
    "java": ">=17"
  },
  "suggests":{
	  "hexcasting": ">=0.10.3",
    "hexal": ">=0.2.10"
  }
}
